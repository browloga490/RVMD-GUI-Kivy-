Test:
	canvas.before:
        Color:
            rgba: 0, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
			
	do_default_tab: False
    background_color: (.5, .5, 1, 1)

	TabbedPanelItem:
		text: "Home"
		
		CalcGridLayout:
			id: calculator
			display: entry
			rows: 6
			padding: 10
			spacing: 10

			BoxLayout:
				TextInput:
					id: entry
					font_size: 32
					multiline: False
			
			BoxLayout:
				spacing: 10
				CustButton:
					text: "7"
					on_press: entry.text += self.text
				CustButton:
					text: "8"
					on_press: entry.text += self.text
				CustButton:
					text: "9"
					on_press: entry.text += self.text
				CustButton:
					text: "+"
					on_press: entry.text += self.text
			
			BoxLayout:
				spacing: 10
				CustButton:
					text: "4"
					on_press: entry.text += self.text
				CustButton:
					text: "5"
					on_press: entry.text += self.text
				CustButton:
					text: "6"
					on_press: entry.text += self.text
				CustButton:
					text: "-"
					on_press: entry.text += self.text
			
			BoxLayout:
				spacing: 10
				CustButton:
					text: "1"
					on_press: entry.text += self.text
				CustButton:
					text: "2"
					on_press: entry.text += self.text
				CustButton:
					text: "3"
					on_press: entry.text += self.text
				CustButton:
					text: "*"
					on_press: entry.text += self.text
			
			BoxLayout:
				spacing: 10
				CustButton:
					text: "AC"
					on_press: entry.text = ""
				CustButton:
					text: "0"
					on_press: entry.text += self.text
				CustButton:
					text: "="
					on_press: entry.text += self.text
				CustButton:
					text: "/"
					on_press: entry.text += self.text

	TabbedPanelItem:
		text: "Other"
		
		OptGridLayout:
			id: opt
			display: entry
			cols: 2
			padding: 10
			spacing: 10
	
			BoxLayout:
				orientation: "vertical"
				padding: 20
				spacing: 40
				
				Button:
					background_normal: ''
					background_color: 1, 0, 0, .85
					text: "First"
					on_press: image.source = 'image1.jpg'
					
				Button:
					background_normal: ''
					background_color: 1, 0, 0, .85
					text: "Second"
					on_press: image.source = 'image2.jpg'
					
				Button:
					background_normal: ''
					background_color: 1, 0, 0, .85
					text: "Third"
					on_press: image.source = 'image3.jpg'
					
				Button:
					background_normal: ''
					background_color: 1, 0, 0, .85
					text: "Fourth"
					on_press: image.source = 'image4.jpg'
					
			BoxLayout:
				orientation: "vertical"
				spacing: 20
				
				Image:
					canvas.before:
						Color:
							rgba: 0, 1, 1, 1
						RoundedRectangle:
							pos: self.pos
							size: self.size
					id: image
					size_hint: 1,1
					#size: 24, 24
					source: 'image1.jpg'
		
					
