 #: import FadeTransition kivy.uix.screenmanager.FadeTransition

<CustButton@Button>:
	font_size: 32		
		
<Channel_1>:
	ScreenOne:
		name: "screen_one"
		BoxLayout:
			Button:
				text: "Channel 1 - Screen 1"
				on_press:
					root.transition.direction = "left"
					root.transition.duration = 0.5
					root.current = 'screen_two'
	ScreenTwo:
		name: "screen_two"
		BoxLayout:
			Button:
				text: "Channel 1 - Screen 2"
				on_press:
					root.transition.direction = "right"
					root.transition.duration = 0.5
					root.current = 'screen_one'
					
